<%- include('partials/header') %>

<main class="post-page">
    <div class="post-container">

        <!-- Back link is OUTSIDE the sticky header, so it scrolls normally -->
        <a href="/stories" class="back-link">‚Üê All Stories</a>

        <article>
            <!-- Only the title and byline are inside the sticky header -->
            <header class="post-header">
                <h1><%= meta.title %></h1>
                <p>By <%= meta.author %> | <%= new Date(meta.date).getFullYear() %></p>
            </header>

            <!-- The story content scrolls normally -->
            <div class="post-body">
                <%- content %>
            </div>
        </article>

    </div>
</main>

<%- include('partials/footer') %>